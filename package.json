{
  "name": "eslint-plugin-import-v2",
  "type": "module",
  "version": "0.0.1",
  "author": "BeeeQueue <adam@haglund.dev>",
  "repository": "https://github.com/BeeeQueue/eslint-plugin-import-v2.git",
  "license": "MIT",
  "packageManager": "pnpm@9.0.1",
  "engines": {
    "node": "^20"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,json5,yaml,yml,css,scss,md}": [
      "oxlint",
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "oxlint -D pedantic -D correctness -D nursery -D style -D restriction -A no-undef -A eqeqeq -A filename-case -A no-null -A no-console",
    "test": "vitest",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": "^8 || ^9"
  },
  "devDependencies": {
    "@manypkg/get-packages": "2.2.0",
    "@tsconfig/node20": "20.1.2",
    "@tsconfig/strictest": "2.0.3",
    "@types/eslint": "8.56.12",
    "@types/estree": "1.0.5",
    "@types/node": "20.11.20",
    "@types/picomatch": "2.3.3",
    "builtin-modules": "3.3.0",
    "dotenv": "16.4.5",
    "eslint": "9.13.0",
    "eslint-plugin-import": "2.31.0",
    "fast-deep-equal": "3.1.3",
    "lint-staged": "15.2.10",
    "memoize": "10.0.0",
    "oxlint": "0.10.2",
    "picomatch": "4.0.1",
    "prettier": "3.2.5",
    "simple-git-hooks": "2.9.0",
    "ts-dedent": "2.2.0",
    "tsup": "8.0.2",
    "typescript": "5.3.3",
    "typescript-eslint": "7.18.0",
    "vitest": "1.3.1"
  },
  "publishConfig": {
    "tag": "next"
  }
}
